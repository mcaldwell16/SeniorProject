@model Roadtrip.Models.ViewModels.EventsViewModel
@{
    ViewBag.Title = "Events";
}

<h2>My Events!</h2>

<table border="1">
    <tr>
        <td width="10%">@Html.DisplayNameFor(model => model.eventName)</td>
        <td width="10%">@Html.DisplayNameFor(model => model.startName)</td>
        <td width="10%">@Html.DisplayNameFor(model => model.finishName)</td>
        <td width="10%">@Html.DisplayNameFor(model => model.route)</td>
    </tr>
    @for (int i = 0; i < Model.size; i++)
    {
        <tr>
            <td width="10%">@Html.DisplayFor(model => model.eventName[i])</td>
            <td width="10%">@Html.DisplayFor(model => model.startName[i])</td>
            <td width="10%">@Html.DisplayFor(model => model.finishName[i])</td>
            <td width="10%">@Html.DisplayFor(model => model.route[i])</td>
        </tr>
    }

</table>

@Html.ActionLink("View Public Routes", "Index", "Events")