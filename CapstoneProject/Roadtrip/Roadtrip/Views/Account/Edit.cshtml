@model IEnumerable<Roadtrip.DAL.LikedRoute>
@{
    ViewBag.Title = "Edit";
}

<script type="text/javascript">
  var LikedList = @Html.Raw(Json.Encode(Model)); //For javascript object

</script>

@Scripts.Render("~/Scripts/LikedRoutes.js")

<h2 style="text-align:center;">@User.Identity.Name</h2>
<body>
    <div class="container profileBackground">
        <div class="row">
            <div class="col-lg-12" style="height:200px;">
                @if (Request.IsAuthenticated)
                {
                    var name = "default.jpg";
                    if (ViewBag.loggedIn)
                    {
                        name = User.Identity.Name + ".jpeg?r=" + DateTime.Now.Ticks.ToString(); ;
                    }
                    <div style="height: 200px;">
                        <img src="~/Uploads/@name" class="profilepic" />
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form id="imgur">
                    <input type="file" class="imgur" accept="image/*" data-max-size="5000" />
                </form>
            </div>
        </div>
    </div>
    <div id="LikedRoutes" style="width:400px"> </div>

</body>

@Scripts.Render("~/Scripts/link.js")

