@model Roadtrip.Models.Profile

@{
    ViewBag.Title = "Edit";
}
    <script type="text/javascript">
    apiKey = '@System.Configuration.ConfigurationManager.AppSettings["ImgurKey"]';
    </script>

<h2 style="text-align:center;">@User.Identity.Name</h2>
<body style="background-color: #F5CB5C;">
    <div class="container profileBackground">
        <div class="row">
            <div class="col-lg-12" style="height:200px;">
                @if (Request.IsAuthenticated)
                {
                    var name = "/Uploads/default.jpg";
                    if (Model.PicLink != "null")
                    {
                        name = Model.PicLink;
                    }
                    <div style="height: 200px;">
                        <img src="@name" class="profilepic" />
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form id="imgur">
                    <input type="file" class="imgur" accept="image/*" data-max-size="10" />
                </form>
            </div>
        </div>
    </div>
    <div id="LikedRoutes" style="width:400px"> </div>

</body>

@Scripts.Render("~/Scripts/link.js")


